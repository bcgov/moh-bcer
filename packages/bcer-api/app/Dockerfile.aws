FROM node:22.0.0

ENV PATH=$PATH:/usr/src/app/node_modules/.bin

WORKDIR '/app'

# Install dependencies
COPY ./package.json ./
RUN npm install

# Copy source files
COPY . .

# Build application
RUN npm run build

# Debug: Print environment variables
RUN printenv

# Add health check
HEALTHCHECK CMD curl --fail http://localhost:4000/ || exit 1

# Run application
CMD [ "npm", "run", "start:prod" ]
