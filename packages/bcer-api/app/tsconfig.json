{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2018",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "src/*": ["*"],
      "@/*": ["*"]
    }
  },
  "exclude": ["node_modules", "dist", "documentation"],
  "typedocOptions": {
    "inputFiles": ["./src"],
    "mode": "modules",
    "out": "./documentation/typedocs"
  }
}